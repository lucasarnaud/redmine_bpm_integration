<div class="splitcontentleft">
  <div class="box tabular">
    <h4> <%= t(:title_process_definition_tracker) %> </h4>

    <%= f.fields_for :tracker_process_definition do |ff_tpd| %>
      <p>
        <%= ff_tpd.label :tracker_id, "#{t(:label_tracker)} <span class='required'> *</span>".html_safe, class: 'bpm-form-label' %>
        <%= ff_tpd.collection_select :tracker_id, Tracker.all, :id, :name, include_blank: true %>

        <% # Não entendi porque essa key fica no tracker_process_definition, se a relação é N-1 %>
        <%= ff_tpd.hidden_field :process_definition_key %>
      </p>
    <% end %>

  </div>
</div>
<div class="splitcontentright">
  <div class="box tabular">
    <h4> <%= t(:title_process_definition_custom_fields) %> </h4>
      <%= f.fields_for :form_field_definitions do |ffd_fields| %>
        <p>
          <%= ffd_fields.label :custom_field_id, "#{ffd_fields.object.name} <span class='required'> *</span>".html_safe, class: 'bpm-form-label' %>
          <%= ffd_fields.collection_select :custom_field_id, IssueCustomField.all, :id, :name, include_blank: true %>
        </p>
      <% end %>
  </div>
</div>
<%= submit_tag t(:button_save) %>
